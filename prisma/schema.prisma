// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Actor {
  id        String  @id @default(uuid())
  firstName String
  lastName  String
  movies    Movie[]
}

model Director {
  id        String  @id @default(uuid())
  firstName String
  lastName  String
  movies    Movie[]
}

model Frame {
  id      String @id @default(uuid())
  movie   Movie  @relation(fields: [movieId], references: [id])
  time    Int
  image   String
  movieId String
}

model Color {
  id     String  @id @default(uuid())
  name   String
  value  String
  movies Movie[]
}

model Movie {
  id              String    @id @default(uuid())
  title           String
  preferedFrameId String?
  actors          Actor[]
  frames          Frame[]
  colors          Color[]
  director        Director? @relation(fields: [directorId], references: [id])
  directorId      String?
}
